<h1>Login Form</h1>
<div>

  <%= form_for @user do |f| %>
    <p>Username: <%= text_field_tag :username %></p>
    <p>Email: <%= text_field_tag :email %></p>
    <p>Password: <%= password_field_tag :password %></p>
    <p>Password_confirmation: <%= password_field_tag :password_confirmation %></p>
    <p><%= submit_tag "Sign up" %>

  <% end %>
</div>